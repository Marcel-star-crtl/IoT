MDScreen:
    MDBoxLayout:
        adaptive_width: False
        orientation: 'vertical'
        spacing: '5'
        padding: '10dp'

        MDBoxLayout:
            adaptive_width: False
            orientation: 'horizontal'
            spacing: '0'
            padding: '0dp'
            size_hint_y: 0.2
            
            MDLabel:
                md_bg_color: 'white'

            MDLabel:
                text: "Box Layout"
                halign: 'center'

            MDLabel:
                md_bg_color: 'white'

        MDBoxLayout:
            orientation: 'horizontal'
            spacing: '10'
            padding: '10dp'

            Image:
                source: "bottle.gif"
                allow_stretch: False
                

            MDLabel:
                halign: 'center'

            MDRectangleFlatButton:
                text: 'Click Me'
                size_hint: 0.2, 0.2
                pos_hint: {'center_x': 0.5,'center_y': 0.5}

        MDBoxLayout:
            orientation: 'horizontal'
            spacing: '10'
            padding: '10dp'

            MDLabel:
                halign: 'center'
                md_bg_color: 'green'

            MDLabel:
                halign: 'center'
                md_bg_color: 'blue'

            MDLabel:
                halign: 'center'
                md_bg_color: 'red'

        MDBoxLayout:
            orientation: 'horizontal'
            spacing: '10'
            padding: '10dp'

            MDLabel:
                halign: 'center'
                md_bg_color: 'green'

            MDLabel:
                halign: 'center'
                md_bg_color: 'blue'

            MDLabel:
                halign: 'center'
                md_bg_color: 'red'

        MDBoxLayout:
            orientation: 'horizontal'
            spacing: '20'
            padding: '40dp'

            MDLabel:
                halign: 'center'

            MDLabel:
                halign: 'center'

            MDFloatingActionButton:
                icon:'plus'
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                md_bg_color: 'grey'